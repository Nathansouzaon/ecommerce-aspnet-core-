<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>NerdShop</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="~/files/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/files/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/files/css/magnific-popup.css">
    <link rel="stylesheet" href="~/files/css/jquery-ui.css">
    <link rel="stylesheet" href="~/files/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/files/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/files/css/aos.css">
    <link rel="stylesheet" href="~/files/css/style.css">
</head>

<body>
    <div class="site-wrap">
        <div class="site-navbar py-2" style="background-color:#f9f9f9!important;">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="logo">
                        <div class="site-logo">
                            <a asp-action="Index" asp-controller="Catalogo" class="js-logo-clone">NerdShop</a>
                        </div>
                    </div>
                    <div class="main-nav d-none d-lg-block">
                        <nav class="site-navigation text-right text-md-center" role="navigation">
                            <ul class="site-menu js-clone-nav d-none d-lg-block">
                                <li><a asp-controller="Catalogo" asp-action="Index">Home</a></li>
                                <li><a asp-controller="Catalogo" asp-action="Index">Produtos</a></li>
                                @*<li><a asp-controller="Catalogo" asp-action="Index">Contato</a></li>*@
                                <li><a asp-controller="Home" asp-action="Sobre">Sobre</a></li>

                                @{
                                    if (User.Identity.IsAuthenticated)
                                    {
                                        <li><a asp-controller="Carrinho" asp-action="Index">Meu Carrinho</a></li>
                                        <li class="has-children">
                                            <a>Minha Conta</a>
                                            <ul class="dropdown">
                                                <li><a asp-controller="Pedido" asp-action="MeusPedidos">Meus Pedidos</a></li>
                                                <li><a asp-controller="Identidade" asp-action="Logout">Sair</a></li>
                                                @*<li class="has-children">
                                        <a href="#">Sub Menu</a>
                                        <ul class="dropdown">
                                        <li><a href="#">Menu One</a></li>
                                        <li><a href="#">Menu Two</a></li>
                                        <li><a href="#">Menu Three</a></li>
                                        </ul>
                                        </li>*@
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a asp-controller="Identidade" asp-action="Login">Entrar</a></li>
                                    }
                                }

                                <li>
                                    <div style="padding-left:60px;">
                                        <form method="get" asp-controller="Catalogo" asp-action="Index" class="search">
                                            <div class="input-group">
                                                <div class="form-outline">
                                                    <input placeholder="O que você busca?" type="search" id="q" name="q" value="@ViewBag.Pesquisa" class="form-control" />
                                                </div>
                                                <button type="submit" class="btn btn-secondary">
                                                    <span class="icon icon-search"></span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="icons">
                        @*<a href="#" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>*@
                        @*<a href="#" class="icons-btn d-inline-block"><span class="icon-heart-o"></span></a>*@
                        @* <a asp-action="Index" asp-controller="Carrinho" class="icons-btn d-inline-block bag">
                        <span class="icon-shopping-bag"></span>
                        <span class="number">2</span>
                        </a>*@
                        @*<div>
                        <form method="get" asp-controller="Catalogo" asp-action="Index" class="search">
                        <div class="input-group">
                        <div class="form-outline">
                        <input placeholder="O que você busca?" type="search" id="q" name="q" value="@ViewBag.Pesquisa" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-secondary">
                        Buscar
                        </button>
                        </div>
                        </form>*@
                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none"><span class="icon-menu"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="min-height: 10px;">
        @RenderBody()
    </div>

    <footer class="site-footer custom-border-top">
        <div class="container">

            <div class="row">
                <div class="row">
                    <div class="col-md-12 text-left">
                        <h3 class="footer-heading mb-4">Links Rápidos</h3>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <ul class="list-unstyled">
                            <li><a asp-controller="Pedido" asp-action="MeusPedidos">Meus Pedidos</a></li>
                            <li><a asp-controller="Carrinho" asp-action="Index">Meu Carrinho</a></li>
                            <li><a href="#">Produtos</a></li>
                            <li><a asp-controller="Identidade" asp-action="Login">Cadastro/Login</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <ul class="list-unstyled">
                            <li><a href="#">Canecas</a></li>
                            <li><a href="#">Camisetas Masculinas</a></li>
                            <li><a href="#">Camisetas Femininas</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <ul class="list-unstyled">
                            <li><a href="#">Bones</a></li>
                            <li><a href="#">Tocas</a></li>
                            <li><a href="#">Acessórios</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3" style="margin-left:250px">
                    <div class="block-5 mb-5">
                        <h3 class="footer-heading mb-4">Informações De Contato</h3>
                        <ul class="list-unstyled">
                            <li class="address">Jaú, São Paulo, Brasil</li>
                            <li class="phone">+55 14 99102-2445</li>
                            <li class="email">suporte@nerdshop.com</li>
                        </ul>
                    </div>

                    <div class="block-7">
                        <label for="email_subscribe" class="footer-heading">Escreva para nós</label>
                        <div class="form-group">
                            <input type="text" class="form-control py-4" id="email_subscribe" placeholder="Mensagem">
                            <input type="submit" class="btn btn-sm btn-secondary" value="Enviar">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-5 mt-5 text-center">
                <div class="col-md-12">
                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> Todos os diretos reservados
                    </p>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/files/js/jquery-3.3.1.min.js"></script>
    <script src="~/files/js/jquery-ui.js"></script>
    <script src="~/files/js/popper.min.js"></script>
    <script src="~/files/js/bootstrap.min.js"></script>
    <script src="~/files/js/owl.carousel.min.js"></script>
    <script src="~/files/js/jquery.magnific-popup.min.js"></script>
    <script src="~/files/js/aos.js"></script>
    <script src="~/files/js/main.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/script.js" type="text/javascript"></script>
    <script src="~/js/site.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>