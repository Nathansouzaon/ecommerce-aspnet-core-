@using App.WebApp.Mvc.Extensions
@using App.WebApp.Mvc.Helpers
@model App.WebApp.Mvc.Models.CarrinhoViewModel

@{
    ViewData["Title"] = "Meu carrinho de compras";
}

<div class="site-wrap">
    <div class="site-section">
        <div class="container">

             <vc:summary></vc:summary>

            @if (Model.Itens.Any())
            {
                <div class="row mb-5">
                    <div class="col-md-12">
                        <div class="site-blocks-table">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="product-thumbnail">Imagem</th>
                                        <th class="product-name">Produto</th>
                                        <th class="product-price">Preço</th>
                                        <th class="product-quantity">Quantidade</th>
                                        <th class="product-total">Total</th>
                                        <th class="product-remove">Remover</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                            @foreach (var produto in Model.Itens)
                                        {
                                                <tr>
                                                    <td class="product-thumbnail">
                                                    <img src="https://api-produtos-nerdstore.azurewebsites.net/imagens/@produto.Imagem" alt="Image" class="img-fluid">
                                                    </td>
                                                    <td class="product-name">
                                                        <h2 class="h5 text-black">@produto.Nome</h2>
                                                    </td>
                                                    <td>R$@produto.Valor</td>
                                                    <td>
                                                        <form method="post" asp-controller="carrinho" asp-action="AtualizarItemCarrinho">
                                                            <input type="hidden" id="ProdutoId" name="ProdutoId" value="@produto.ProdutoId" />
                                                            <input type="hidden" id="ProdutoId" name="ProdutoId" value="@produto.ProdutoId" />
                                                            <div class="input-group mb-3 p-2 ml-5 mr-2" style="width:130px">
                                                                <div class="input-group-prepend">
                                                                    <button class="btn btn-outline-secondary js-btn-minus" type="button">&minus;</button>
                                                                </div>
                                                                <input type="text" class="form-control text-center" value="@produto.Quantidade" id="Quantidade" name="Quantidade" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                                                                <div class="input-group-append">
                                                                    <button class="btn btn-outline-secondary js-btn-plus" type="button">&plus;</button>
                                                                </div>
                                                            </div>
                                                            <button type="submit" class="btn btn-success" style="margin-left:8px;margin-right:12px"><span class="icon-refresh"></span> Atualizar</button>
                                                        </form>
                                                    </td>
                                                    <td>R$ @(produto.Valor * produto.Quantidade)</td>
                                                    <td>
                                                        <form method="post" asp-controller="Carrinho" asp-action="RemoverItemCarrinho">
                                                            <input type="hidden" id="ProdutoId" name="ProdutoId" value="@produto.ProdutoId" />
                                                            <button type="submit" class="btn btn-danger"><span class="icon-trash"></span> Remover</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <a style="padding-top:16px;" class="btn btn-outline-primary btn-sm btn-block" asp-controller="Catalogo" asp-action="Index">Continuar Comprando</a>
                            </div>
                        </div>
                        <form asp-action="AplicarVoucher">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="text-black h4" for="coupon">Cupom De Desconto</label>
                                    <p>Entre com um cupom de desconto aplicável na loja</p>
                                </div>
                                <div class="col-md-8 mb-3 mb-md-0">
                                    <input type="text" class="form-control py-3" id="coupon" placeholder="Código do cupom" name="VoucherCodigo" id="VoucherCodigo" value="@Model.Voucher?.Codigo">
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-outline-primary btn-sm btn-block">Aplicar Cupom</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 pl-5">
                        <div class="row justify-content-end">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-12 text-right border-bottom mb-5">
                                        <h3 class="text-black h4 text-uppercase">Valor Total Carrinho</h3>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <span class="text-black">Subtotal</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">R$ @(Model.ValorTotal + Model.Desconto)</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <span class="text-black">Descontos</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-success">R$ @Model.Desconto</strong>
                                    </div>
                                </div>

                                <div class="row mb-5">
                                    <div class="col-md-6">
                                        <span class="text-black">Total</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">R$ @Model.ValorTotal</strong>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <a class="btn btn-success btn-lg btn-block" asp-controller="Pedido" asp-action="EnderecoEntrega">Continuar Para Pagamento</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
